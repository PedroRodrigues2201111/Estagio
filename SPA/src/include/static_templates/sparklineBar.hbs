<div style="width:100%;height:20px;padding: 0px 14px;">
  <div class="bar bard" style="text-align:right;width:{{formatNumber (prop . valueField "0") 0}}%;height:15px;position: relative;">
   <div class="tooltip top" style="z-index: 1000;position:absolute;right: -4px;opacity: 1;margin-top: -8px;">      
     <div class="tooltip-arrow" style="width: 5px;overflow: hidden;right: 1px;left: inherit;bottom: 4px;border-width: 5px 3px 0;">      
     </div>      
     <span class="tooltip-inner" style="color: white;font-size: 9px;font-weight: normal;padding: 1px 4px;">{{formatNumber (prop . valueField "0") 0}}%</span>    
   </div>
  </div>
  <div class="bar" style="width:100%;height:5px;background-color:#eeeeee;border-radius:1px;">
    <div style="width:{{formatNumber (prop . valueField "0") 0}}%;height: 100%;border-radius:1px;background-color:{{color}}">
    </div>
  </div>
</div>