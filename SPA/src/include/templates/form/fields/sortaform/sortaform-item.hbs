<li class="list-group-item" style="display:flex;align-items:center">
  {{#unless @noView}}
    <i class="fa fa-fw fa-eye sort-action sort-view"></i>
  {{/unless}}
  <div
    class="sort-content"
    style="display:inline-block;flex-grow:1;padding: 0 20px;"
  >
  </div>

  <div class="sortaform-edit-controls" style="display: flex;">
    {{#unless @noEdit}}
      <i class="fa fa-fw fa-pencil sort-action sort-edit"></i>
    {{/unless}}
    {{#unless @noRemove}}
      <i class="fa fa-fw fa-times sort-action sort-remove"></i>
    {{/unless}}
  </div>
</li>