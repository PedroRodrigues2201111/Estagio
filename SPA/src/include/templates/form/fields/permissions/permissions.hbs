<div class="col-xs-12 hidden">
  <div class="form-group">
    <label>Roles:</label>
    <select data-id="role-select">
    </select>
  </div>
</div>
<div class="col-xs-12 hidden">
  <div class="form-group hidden">
    <label>Users:</label>
    <select data-id="user-select">
    </select>
  </div>
</div>
<div class="hidden">
  <div class="col-sm-8">
    <div class="form-group">
      <label>Views:</label>
      <div class="well well-sm">
        <div class="tree-search form-group">
          <div class="input-group">
            <span class="input-group-addon">
              <i class="fa fa-fw fa-search"></i>
            </span>
            <input type="text" class="form-control tree-search-input" />
            <i class="searchclear fa fa-times"></i>
          </div>
        </div>
        <div class="view-tree compact">
        </div>
        <div class="form-group">
          <button type="button" data-id="btn-select-all" class="btn btn-flat btn-success">Select All</button>
          <button type="button" data-id="btn-select-none" class="btn btn-flat btn-danger pull-right">Clear Selection</button>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-4">
    <div>
      <div class="col-sm-12 col-xs-6">
      
        <div class="form-group">
          <label data-i18n="app.permissions.default-permissions">Default Permissions:</label>
          <div class="default-permissions well well-sm" style="padding-right:25px;display:table;margin: 10px auto;">
            {{#each ap}}
            <div class="checkboxb">
              <input type="checkbox" id="perm-{{k}}" data-id="{{k}}" {{#eq k "read"}}checked{{/eq}}>
              <label for="perm-{{k}}" data-i18n="{{i18n}}">
              </label>
            </div>                    
            {{/each}}
          </div>
        </div>
      </div>
        
      <div class="col-sm-12 col-xs-6">
        
        <div style="text-align: center;margin: 10px auto;">
          <button type="button" data-id="add-button" class="btn btn-flat btn-primary btn-lg">
            Add
            <i class="fa fa-long-arrow-down"></i> 
          </button>
        </div>
        
      </div>
    </div>
  </div>
</div>
<div class="col-xs-12">
  <div class="form-group hidden">
    <label>Details:</label>
    <div class="table-responsive">
      <table class="table table-striped table-condensed" style="background-color: white">
        <thead>
          <tr>
            <th colspan="2">
            
            {{#each ap}}
            <th class="text-center">
              <span style="cursor: default" data-i18n="{{i18n}}_short;[title]{{i18n}}"></span>
            </th>
            {{/each}}
      
          </tr>
        </thead>
        <tbody></tbody>
      </table>
    </div>
  </div>
</div>