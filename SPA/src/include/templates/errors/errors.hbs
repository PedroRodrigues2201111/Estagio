{{/inline}}

{{#eq type "Form"}}
  {{> normal}}
{{else eq type "Grid"}}
  {{> normal}}
{{else eq type "Widget"}}
  {{> mini}}
{{else eq type "Template"}}
  {{> normal}}
{{/eq}}