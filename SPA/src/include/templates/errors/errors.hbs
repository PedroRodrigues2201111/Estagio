            {{/if}}
          </div>
          <div class="modal-footer">
            {{#unless cantRetry}}
            <button type="button" data-i18n="app.core.retry"
              class="btn btn-outline retrybtn">
            </button>
            {{/unless}}
            <button type="button" data-i18n="app.core.close"
              class="btn btn-outline closebtn">
            </button>
          </div>
        </div>
