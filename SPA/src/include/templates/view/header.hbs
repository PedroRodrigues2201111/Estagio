{{#*inline "base"}}
  <section class="content-header float-header clearfix">
    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
      <span class="sr-only">Toggle navigation</span>
    </a>
    {{#if icon}}
      <i class="{{icon}}"></i>
    {{/if}}
    <b {{#title-i18n}}data-i18n="{{.}}" {{/title-i18n}}>
    </b>
    <div class="navbar-custom-menu">
      {{#if buttons}}
        <div class="dropdown header-button visible-xs">
          <a class="text-center" aria-expanded="true" href="#" data-toggle="dropdown">
            <i class="fa fa-chevron-down"></i>
          </a>
          <ul class="dropdown-menu dropdown-menu-right" style="width: auto;">
            <li class="header hidden"></li>
            <li>
              <div style="position: relative; overflow: hidden; width: auto;" class="slimScrollDiv">
                <ul style="overflow: hidden; width: 100%;" class="header-small-menu">
                  {{#buttons}}
                    {{>list-button}}
                  {{/buttons}}
                </ul>
              </div>
            </li>
            <li class="footer hidden"></li>
          </ul>
        </div>
        <ul class="nav navbar-nav buttons hidden-xs">
          {{#buttons}}
            {{>big-button}}
          {{/buttons}}
        </ul>
      {{/if}}
    </div>
  </section>
  {{/inline}}


  {{#*inline "list-button"}}
    {{#if buttons}}
      <li data-id="{{id}}" class="dropdown messages-menu header-button {{#permissions}}has-permissions{{/permissions}}"
        {{#each permissions}}data-permission-{{@key}}="{{this}}" {{/each}}
        {{#each errors}}data-error-{{@key}}="{{this}}" {{/each}}>
        <a class="text-center" aria-expanded="true" href="#" data-toggle="dropdown">
          {{#if icon}}
            <i class="{{icon}}"></i>
          {{/if}}
          <span class="">
              <span {{#if title-i18n}} data-i18n="{{title-i18n}}" {{/if}}></span><i class="fa"></i>
          </span>
        </a>
        <ul class="dropdown-menu dropdown-menu-inline" style="width: auto;">
          <li class="header hidden"></li>
          <li>
            <div style="position: relative; overflow: hidden; width: auto;" class="slimScrollDiv">
              <ul style="overflow: hidden; width: 100%;" class="menu header-small-menu">
                {{#each buttons}}
                  <li data-id="{{id}}" class="header-button {{#permissions}}has-permissions{{/permissions}}"
                    {{#each permissions}}data-permission-{{@key}}="{{this}}" {{/each}}
                    {{#each errors}}data-error-{{@key}}="{{this}}" {{/each}}data-btn-action="{{id}}">
                    <a class="text-center" href="#">
                      {{#if icon}}
                        <i class="{{icon}}"></i>
                      {{/if}}
                      <span>
                        <span {{#title-i18n}}data-i18n="{{.}}" {{/title-i18n}}></span>
                      </span>
                    </a>
                  </li>
                {{/each}}
              </ul>
            </div>
          </li>
          <li class="footer hidden">
            <a href="#"></a>
          </li>
        </ul>
      </li>
    {{else}}
      <li data-id="{{id}}" class="header-button {{#permissions}}has-permissions{{/permissions}}"
        {{#each permissions}}data-permission-{{@key}}="{{this}}" {{/each}}
        {{#each errors}}data-error-{{@key}}="{{this}}" {{/each}}data-btn-action="{{id}}">
        <a class="text-center" href="#">
          {{#if icon}}
            <i class="{{icon}}"></i>
          {{/if}}
          <span>
              <span {{#title-i18n}} data-i18n="{{.}}" {{/title-i18n}}></span>
          </span>
        </a>
      </li>
    {{/if}}
    {{/inline}}


    {{#*inline "big-button"}}
      {{#if buttons}}
        <li data-id="{{id}}" class="dropdown header-button {{#permissions}}has-permissions{{/permissions}}"
          {{#each permissions}}data-permission-{{@key}}="{{this}}" {{/each}}
          {{#each errors}}data-error-{{@key}}="{{this}}" {{/each}}>
          <a class="text-center" aria-expanded="true" href="#" data-toggle="dropdown">
            {{#if icon}}
              <i class="{{icon}}"></i>
            {{/if}}
            <p class="">
                <span {{#if title-i18n}} data-i18n="{{title-i18n}}" {{/if}}></span><i class="fa"></i>
            </p>
          </a>
          <ul class="dropdown-menu dropdown-menu-right" style="width: auto;">
            <li class="header hidden"></li>
            <li>
              <div style="position: relative; overflow: hidden; width: auto;" class="slimScrollDiv">
                <ul style="overflow: hidden; width: 100%;" class="menu header-small-menu">
                  {{#each buttons}}
                    <li data-id="{{id}}" class="header-button {{#permissions}}has-permissions{{/permissions}}"
                      {{#each permissions}}data-permission-{{@key}}="{{this}}" {{/each}}
                      {{#each errors}}data-error-{{@key}}="{{this}}" {{/each}}data-btn-action="{{id}}">
                      <a class="text-center" href="#">
                        {{#if icon}}
                          <i class="{{icon}}"></i>
                        {{/if}}
                        <span>
                            <span {{#title-i18n}} data-i18n="{{.}}" {{/title-i18n}}></span>
                        </span>
                      </a>
                    </li>
                  {{/each}}
                </ul>
              </div>
            </li>
            <li class="footer hidden">
              <a href="#"></a>
            </li>
          </ul>
        </li>
      {{else}}
        <li data-id="{{id}}" class="header-button {{#permissions}}has-permissions{{/permissions}}"
          {{#each permissions}}data-permission-{{@key}}="{{this}}" {{/each}}
          {{#each errors}}data-error-{{@key}}="{{this}}" {{/each}}data-btn-action="{{id}}">
          <a class="text-center" href="#">
            {{#if icon}}
              <i class="{{icon}}"></i>
            {{/if}}
            <p class="hidden-xs">
                <span {{#title-i18n}} data-i18n="{{.}}" {{/title-i18n}}></span>
            </p>
          </a>
        </li>
      {{/if}}
      {{/inline}}

      {{> base}}